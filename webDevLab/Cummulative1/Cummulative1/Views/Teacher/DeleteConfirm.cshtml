@model Cummulative1.Models.Teacher


@{
    ViewBag.Title = "DeleteConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Confirm</h2>
<div>Are you sure to delete @Model.TeacherFname @Model.TeacherLname and her properties from the database</div>

<form action="/Teacher/DelTeacher/@Model.TeacherId" method="GET">

    <input type="submit" name="name" value="YES, delete @Model.TeacherFname @Model.TeacherLname" />
    
</form>
<form action="/Teacher/TeacherList" method="post">
    <input type="submit" name="name" value="Cancel" />
</form>


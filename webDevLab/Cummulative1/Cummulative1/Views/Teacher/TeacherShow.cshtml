@model Cummulative1.Models.Teacher
  

@{
    ViewBag.Title = "TeacherShow";
}

@{
    var data = ViewBag.SearchKey;
 }

<a href="/Teacher/TeacherList">Back to Teachers</a>
<a href="/Teacher/DeleteConfirm?id=@Model.TeacherId" style="float: right">Delete</a>


<h1>Showing teacher corresponding to the ID provided</h1>

<p><strong><em>@Model.TeacherFname @Model.TeacherLname</em></strong></p>
<div>With teacher's ID of @Model.TeacherId</div>

@model Cummulative1.Models.Teacher
@{
    ViewBag.Title = "EditTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a href="/Teacher/TeacherShow/@Model.TeacherId">Back</a>
<h2>Edit Teacher</h2>
<form action="/Teacher/UpdateTeacher/@Model.TeacherId" method="post">
    <div>
        <label for="TeacherFname">First Name</label>
        <input type="text" name="TeacherFname" value="@Model.TeacherFname" id="TeacherFname" placeholder=""/>
    </div>
    <div>
        <label for="TeacherLname">Last Name</label>
        <input type="text" name="TeacherLname" value="@Model.TeacherLname" id="TeacherLname"/>
    </div>
    <div>
        <label for="TeacherSalary">Salary</label>
        <input type="text" name="TeacherSalary" value="@Model.TeacherSalary" id="TeacherSalary"/>
    </div>
    <div>
        <label for="TeacherHireDate">Hire Date</label>
        <input type="datetime" name="TeacherHireDate" value="@Model.TeacherHireDate" id="TeacherHireDate"/>
    </div>

    <input type="submit" name="name" value="Update Teacher" />
</form>

